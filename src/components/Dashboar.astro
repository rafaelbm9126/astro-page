---
const { category, title, description } = Astro.props;
---

<div
  class="bg-white py-2 mx-auto grid grid-cols-1 md:grid-cols-2 items-center md:gap-20"
>
  <div class="content">
    <div class="flex items-center gap-3">
      <hr class="w-10 bg-orange-500 border" />
      <span class="md:text-[18px] font-medium text-gray-800">
        {category}
      </span>
    </div>
    <p
      class="text-[40px] lg:text-[45px] xl:text-[55px] font-bold leading-tight mt-5 sm:mt-0"
      set:html={title}
    />
    <p class="mt-5 md:text-md">
      {description}
    </p>
  </div>
</div>
